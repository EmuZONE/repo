<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.cyphersbuilds" name="Cypher's Builds Wizard" version="1.0.1" provider-name="Cypher">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>executable</provides>
  </extension>
  <extension point="xbmc.service" library="startup.py" start="startup" />
  <extension point="xbmc.addon.metadata">
    <summary lang="en">Cypher's Builds</summary>
    <description lang="en">Cypher Builds Wizard allows you to get access to the latest Cypher Media Builds.</description>
    <platform>all</platform>
  </extension>
</addon>
